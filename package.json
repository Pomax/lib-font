{
  "name": "font-js",
  "version": "2.0.0",
  "description": "A JS based OpenType font inspector",
  "main": "Font.js",
  "type": "module",
  "directories": {
    "lib": "lib",
    "src": "src"
  },
  "scripts": {
    "start": "npm test",
    "clean": "prettier --write \"src/**/*.js\"",
    "test": "run-s clean test:jest test:browser build",
    "test:browser": "run-p test:server test:puppeteer",
    "test:server": "node ./testing/browser/server.js",
    "test:puppeteer": "node ./testing/browser/puppeteer.js",
    "test:jest": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --verbose=false ./testing/node/",
    "build": "rollup --no-treeshake --format=esm Font.js > dist/font.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pomax/font.js.git"
  },
  "keywords": [
    "opentype",
    "font",
    "webfont",
    "parse",
    "inspect",
    "debug"
  ],
  "author": "Pomax",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/Pomax/font.js/issues"
  },
  "homepage": "https://github.com/Pomax/font.js#readme",
  "devDependencies": {
    "cross-env": "^7.0.2",
    "express": "^4.17.1",
    "jest": "^26.5.3",
    "npm-run-all": "^4.1.5",
    "open-cli": "^6.0.1",
    "prettier": "^2.1.1",
    "puppeteer": "^5.3.1",
    "rollup": "^2.32.1"
  }
}
